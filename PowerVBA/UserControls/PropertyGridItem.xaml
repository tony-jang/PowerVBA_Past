<UserControl x:Class="PowerVBA.UserControls.PropertyGridItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerVBA.UserControls"
             mc:Ignorable="d" 
             Height="25" d:DesignWidth="300">
    <Grid x:Name="ppGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="propName" Text="Property" VerticalAlignment="Center" TextAlignment="Center"/>
    </Grid>
</UserControl>
